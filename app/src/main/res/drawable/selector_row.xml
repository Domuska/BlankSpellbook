<?xml version="1.0" encoding="utf-8"?>
<!-- The selector for Recycler View displayed in AddToPowerListDialog, see
    https://developer.android.com/guide/topics/resources/drawable-resource.html#StateList -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- was used when the SpellDetailsActivity's AddToPowerListDialog displayed
    only selectable rows instead of checkboxes -->
    <!-- Color when the row is selected -->
    <item android:drawable="@color/my_color_app_accent_lighter"
        android:state_pressed="false"
        android:state_selected="true" />

    <item android:drawable="@color/my_color_app_accent_lighter"
        android:state_pressed="true"
        android:state_selected="true" />

    <!-- Standard background color -->
    <item android:drawable="@color/my_color_colorWhiteBackGround"
        android:state_selected="false" />
</selector>