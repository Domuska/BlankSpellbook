<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity.MainActivity">

    <!-- the layout that has is the "main screen" of the activity, see
     http://developer.android.com/training/implementing-navigation/nav-drawer.html#OpenClose -->
    <RelativeLayout
        android:id="@+id/main_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!-- Support library toolbar as the topmost element -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >


            <Button
                android:id="@+id/button_dailySpells"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/button_dailyspells"/>

            <Button
                android:id="@+id/button_Spellbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/button_dailySpells"
                android:layout_toEndOf="@+id/button_dailySpells"
                android:text="@string/button_spellbook"/>



        </LinearLayout>



        <Button
            android:id="@+id/drawer_addSpellBookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:text="add spell book"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/drawer_layout2"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left">


        <ListView
            android:id="@+id/drawer_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/md_grey_500"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            />

        <Button
            android:id="@+id/drawer_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="nappi 1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/drawer_button_1"
            android:layout_alignRight="@+id/drawer_button_1"
            android:layout_alignParentBottom="true"
            android:text="nappi 2"/>


    </RelativeLayout>





</android.support.v4.widget.DrawerLayout>
