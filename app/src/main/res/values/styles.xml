<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_deep_orange_500</item>
        <item name="colorPrimaryDark">@color/md_deep_orange_700</item>
        <item name="colorAccent">@color/md_teal_300</item>
        <item name="android:colorBackground">@color/md_grey_50</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="android:textColorPrimary">@color/primary_dark_material_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_light</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_dark</item>

    </style>
    <style name="SecondaryTextRecyclerView">
        <item name="android:textColor">@color/my_color_dark_gray</item>
    </style>

    <style name="dialogFragment_title_style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- if we were on Lollipop (23) upwards, we could just use the following line,
         but since we go lower we also need the dialogfragment_title below -->
        <!-- <item name="android:titleTextColor">?android:textColorPrimaryInverse</item> -->
        <item name="android:titleTextStyle">@style/dialogfragment_title</item>
    </style>

    <style name="dialogfragment_title">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="textInputLayoutEditTextMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>


    <!-- custom theme so we get proper text colours in settings -->
    <style name="SettingsFragmentStyle">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>
    
    <!-- style for the search view -->
    <style name="searchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_black_24dp</item>
        <item name="searchHintIcon">@drawable/ic_search_black_24dp</item>
        <item name="queryBackground">@color/my_color_app_accent_lighter</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:editTextColor">@color/md_black_1000</item>
        <item name="android:textColorHint">@color/md_black_1000</item>
        <!-- set the close icon as transparent, we have different close button that works differently -->
        <!-- <item name="closeIcon">@android:color/transparent</item> -->
        <!-- <item name="queryBackground">@color/md_black_1000</item>-->
    </style>
    
</resources>
