<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tomi.piipposoft.blankspellbook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PowerList.PowerListActivity"
            android:label="@string/title_activity_spell_book" />
        <activity
            android:name=".dailypowerlist.DailyPowerListActivity"
            android:label="@string/title_activity_daily_spells" />
        <activity
            android:name=".PowerDetails.PowerDetailsActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>